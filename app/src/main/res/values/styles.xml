<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NormalText">
        <item name="android:paddingLeft">@dimen/normal_text_padding</item>
        <item name="android:paddingRight">@dimen/normal_text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="DetailsLabels">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingRight">@dimen/details_text_padding</item>
        <item name="android:paddingLeft">@dimen/details_text_padding</item>
    </style>

    <style name="NormalTextDetails">
        <item name="android:textSize">@dimen/text_size_details</item>
        <item name="android:paddingRight">@dimen/details_text_padding</item>
        <item name="android:paddingLeft">@dimen/details_text_padding</item>
    </style>

    <style name="OwnerActivityText">
        <item name="android:padding">@dimen/normal_text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>